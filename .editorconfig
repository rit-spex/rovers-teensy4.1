# .editorconfig file based on provided .clang-format

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

# Indentation
indent_style = space
indent_size = 4
tab_width = 4

# Max line length
max_line_length = 100

# C-family specific settings (applies to .c, .cpp, .h, etc.)
[*.{c,cpp,h,hpp,cc,hh}]
indent_style = space
indent_size = 4
tab_width = 4

# Use Allman-style braces where supported (not directly supported in editorconfig itself)
# Some editors (like VSCode with extensions) may respect this comment:
brace_style = allman

# Pointer/reference alignment (right-aligned)
# Not supported in editorconfig - document for linter usage
pointer_alignment = right
reference_alignment = right
